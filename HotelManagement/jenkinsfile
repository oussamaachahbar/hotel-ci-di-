pipeline {
    agent any

    stages {
        stage('Example') {
            steps {
                script {
                    if (isUnix()) {
                        // Utilisation de 'nohup' pour Unix
                        sh 'nohup your-command &'
                    } else {
                        // Utilisation de 'start' pour Windows
                        bat 'start your-command'
                    }
                }
            }
        }
    }
}
